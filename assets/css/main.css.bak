/*=============== GOOGLE FONTS ===============*/
@import url("https://fonts.googleapis.com/css2?family=Merriweather:wght@900&family=Rubik:wght@400;500&display=swap");
/*=============== BASE ===============*/
@import url("base.css");
/*=============== REUSABLE CSS CLASSES ===============*/
@import url("reusable-classes.css");
/*=============== HEADER ===============*/
.header {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 100;
}
.header__container {
  min-height: 4.375rem  /* 70/16 */;
  padding-top: 0.3125rem  /* 5/16 */;
  padding-bottom: 0.3125rem  /* 5/16 */;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 1.25rem  /* 20/16 */;
}
.header__logo {
  display: flex;
  align-items: center;
  column-gap: 0.375rem  /* 6/16 */;
}
.header__wordmark {
  display: none;
}
.header__body {
  display: flex;
  align-items: center;
  column-gap: 1.25rem;
}
.header__list {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  column-gap: 1.25rem  /* 40/16 */;
  row-gap: 0.625rem  /* 10/16 */;
  color: #fff;
  font-family: Rubik, sans-serif;
  font-size: 0.875rem  /* 12/16 */;
  font-weight: 500;
}
.header__item:hover {
  text-decoration: underline;
  cursor: pointer;
}
.header__button {
  font-family: Rubik, sans-serif;
  font-size: 0.75rem  /* 12/16 */;
  font-weight: 500;
  color: #606B74;
  background-color: #fff;
  -webkit-border-radius: 0.25rem  /* 4/16 */;
  -moz-border-radius: 0.25rem  /* 4/16 */;
  border-radius: 0.25rem  /* 4/16 */;
  padding: 0.625rem  /* 10/16 */ 0.9375rem  /* 15/16 */;
  -webkit-transition: background-color .4s, color .4s;
  -moz-transition: background-color .4s, color .4s;
  -ms-transition: background-color .4s, color .4s;
  -o-transition: background-color .4s, color .4s;
  transition: background-color .4s, color .4s;
}
.header__button:hover {
  color: #fff;
  background-color: #333;
}
@media screen and (min-width: 39.0625em  /* 625/16 */) {
  .header__container {
    min-height: 6.5625rem  /* 105/16 */;
  }
  .header__wordmark {
    display: inline-block;
  }
  .header__body {
    column-gap: 2.6875rem  /* 43/16 */;
  }
  .header__list {
    column-gap: 2.5rem  /* 20/16 */;
    font-size: 0.75rem  /* 14/16 */;
  }
  .header__button {
    padding: 0.625rem  /* 10/16 */ 1.34375rem  /* 21.5/16 */;
  }
}
/* ====================== PAGE ====================== */
.page {
  flex: 1 1 auto;
}
.page__main {

}
/* ====================== MAIN SECTION ====================== */
.main {
  min-height: 100vh;
  position: relative;
}
.main__image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.main__img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}